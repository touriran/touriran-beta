if (__('lang')=="en") 
  include ../data/_data_en
else if (__('lang')=="ar")  
  include ../data/_data_ar
else if (__('lang')=="fa")  
  include ../data/_data_fa
else if (__('lang')=="fr")  
  include ../data/_data_fr    
  
include ../mixins/_import
include ../_partial/helpers
doctype html

//- Variables
block vars
  - var pagee

//- Template
html(lang="en" dir=__('direction'))
  head
    include ../partials/_head
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:400,500")
    link(rel="stylesheet" href=__('style'))
    script(src="/scripts/uikit.js")
    script(src="/scripts/uikit-icons.js")
    block title


  body
    div.uk-offcanvas-content
      block index
      block pagination
    script(src="/scripts/script.js")
    script(src="//maps.googleapis.com/maps/api/js?key=AIzaSyClyjCemJi4m2q78gNeGkhlckpdH1hzTYA&callback=initMap"
           async
           defer)